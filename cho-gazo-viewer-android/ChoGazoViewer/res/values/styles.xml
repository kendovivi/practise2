<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ChoGazoViewerDarkActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/abc_ab_solid_dark_holo</item>
        <item name="android:alertDialogStyle">@style/BlackAlertDialog</item>
        <item name="android:checkboxStyle">@style/ChoGazoViewerCheckBox</item>
    </style>
    <style name="ChoGazoViewerThemeNoTitleBar" parent="android:Theme.Black.NoTitleBar">
    </style>

    <style name="BlackAlertDialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowBackground">@android:color/transparent</item>  
    </style>
    <style name="ChoGazoViewerCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cho_gazo_viewer_btn_check_holo_dark</item>
    </style>
</resources>
